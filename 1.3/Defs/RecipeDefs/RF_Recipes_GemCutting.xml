<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>RF_CutDiamond</defName>
    <label>cut rough diamond</label>
    <description>Cut and polish a rough diamond into a cut diamond.</description>
    <jobString>Cutting diamond.</jobString>
    <workAmount>2400</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
  	<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
    <recipeUsers>
			<li>RF_MedievalGemCuttingBench</li>
			<!--<li>RF_IndustrialGemCuttingBench</li>-->
		</recipeUsers>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RF_RoughDiamond</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RF_RoughDiamond</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RF_Diamond>1</RF_Diamond>
    </products>
    <skillRequirements>
        <Crafting>6</Crafting>
    </skillRequirements>
  </RecipeDef>

