<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RF_SunstoneWallLamp</defName>
    <label>SunstoneWallLamp</label>
    <description>A small shard of citrine mounted on a wall. It lights up an area, providing light in its surroundings.</description>
    <category>Building</category>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/RF_SunstoneWallLamp/RF_SunstoneWallLamp</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,1)</drawSize>
      <drawOffsetNorth>(0,0,0.385)</drawOffsetNorth>
      <drawOffsetSouth>(0,0,-0.20)</drawOffsetSouth>
      <drawOffsetEast>(0.4,0,0.28)</drawOffsetEast>
      <drawOffsetWest>(-0.4,0,0.28)</drawOffsetWest>
      <drawRotated>false</drawRotated>
      <allowFlip>true</allowFlip>
      <damageData>
        <rect>(0.2,0,0.6,0.1)</rect>
      </damageData>
    </graphicData>
    <rotatable>true</rotatable>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>10</pathCost>
    <!--<constructEffect>ConstructWood</constructEffect>-->
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Beauty>2</Beauty>
      <Mass>1</Mass>
      <WorkToBuild>450</WorkToBuild>
    </statBases>
    <selectable>true</selectable>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <costList>
      <RF_RoughCitrine>6</RF_RoughCitrine>
    </costList>
    <building>
			<isEdifice>false</isEdifice>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0.15</resourcesFractionWhenDeconstructed>
    <clearBuildingArea>false</clearBuildingArea>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="VanillaFurnitureExpanded.CompProperties_MountableOnWall"/>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(255,255,149,0)</glowColor> <!--20% reduction of original-->
      </li>
      <!--<li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
      </li>-->
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>25</heatPerSecond>
        <heatPushMaxTemperature>33</heatPushMaxTemperature>
      </li>
      <li Class="RimFantasy.CompProperties_Aura_Temperature">
        <auraRadius>2</auraRadius>
        <auraStrength>24</auraStrength>
        <locationMode>Both</locationMode>
        <maxTemperature>28</maxTemperature>
        <workThroughWalls>false</workThroughWalls>
      </li>
      <li Class="RimFantasy.CompProperties_Aura_Rest">
        <auraRadius>2</auraRadius>
        <auraStrength>0.011</auraStrength> <!-- Was 0.001 -->
        <locationMode>Both</locationMode>
        <minRest>0</minRest>
        <maxRest>0.8</maxRest>
        <workThroughWalls>false</workThroughWalls>
      </li>
      <li Class="RimFantasy.CompProperties_Aura_Food">
        <auraRadius>2</auraRadius>
        <auraStrength>0.011</auraStrength> <!-- Was 0.001 -->
        <locationMode>Both</locationMode>
        <minFood>0</minFood>
        <maxFood>0.8</maxFood>
        <workThroughWalls>false</workThroughWalls>
      </li>
      <li Class="RimFantasy.CompProperties_Aura_Joy">
        <auraRadius>2</auraRadius>
        <auraStrength>0.011</auraStrength> <!-- Was 0.001 -->
        <locationMode>Both</locationMode>
        <minJoy>0</minJoy>
        <maxJoy>0.8</maxJoy>
        <workThroughWalls>false</workThroughWalls>
      </li>
      <li Class="RimFantasy.CompProperties_Aura_Mood">
        <auraRadius>2</auraRadius>
        <auraStrength>8</auraStrength> <!-- Was 8 -->
        <locationMode>Both</locationMode>
        <minMood>0</minMood>
        <maxMood>0.8</maxMood>
        <workThroughWalls>false</workThroughWalls>
      </li>
      <li Class="CompProperties_Explosive">
        <wickTicks>60</wickTicks>
        <explosiveRadius>1</explosiveRadius>
        <explosiveDamageType>RF_Flame_SmallSquareRF_Citrine</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0</chanceNeverExplodeFromDamage>
        <postExplosionSpawnChance>0.25</postExplosionSpawnChance>
        <postExplosionSpawnThingDef>RF_RubbleShardsRF_Citrine</postExplosionSpawnThingDef>
        <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
      </li>
    </comps>
    <designationCategory>Furniture</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <!--<researchPrerequisites>
      <li>RF_MagicalLighting</li>
    </researchPrerequisites>-->
  </ThingDef>

</Defs>
