<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>RF_CooldownIncreaseMinor</defName>
    <label>bradykinesia (Minor)</label>
    <description>Combat reflexes slowed down by a magical force.</description>
	<modExtensions>
		<li Class="RimFantasy.HediffExtension">
			<cooldownMultiplier>1.2</cooldownMultiplier>
		</li>
	</modExtensions>
  </HediffDef>

  <HediffDef>
    <defName>RF_CooldownIncreaseMajor</defName>
    <label>bradykinesia (Major)</label>
    <description>Combat reflexes slowed down by a magical force.</description>
  <modExtensions>
    <li Class="RimFantasy.HediffExtension">
      <cooldownMultiplier>1.5</cooldownMultiplier>
    </li>
  </modExtensions>
  </HediffDef>

  <HediffDef>
    <defName>RF_CooldownIncreaseSevere</defName>
    <label>bradykinesia (Severe)</label>
    <description>Combat reflexes slowed down by a magical force.</description>
  <modExtensions>
    <li Class="RimFantasy.HediffExtension">
      <cooldownMultiplier>2</cooldownMultiplier>
    </li>
  </modExtensions>
  </HediffDef>

  <DamageDef ParentName="CutBase">
    <defName>RF_DrainDamage</defName>
    <label>drain</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <deathMessage>{0} has been drained to death.</deathMessage>
    <hediff>RF_DrainDamage</hediff>
    <harmAllLayersUntilOutside>false</harmAllLayersUntilOutside>
    <hasForcefulImpact>false</hasForcefulImpact>
    <canInterruptJobs>false</canInterruptJobs>
    <impactSoundType />
    <armorCategory />
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>RF_DrainDamage</defName>
    <label>drain</label>
    <labelNoun>a drain</labelNoun>
    <description>Health drained by shadow magic.</description>
    <injuryProps>
      <canMerge>false</canMerge>
    </injuryProps>
  </HediffDef>
</Defs>
