<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>RF_CooldownIncrease</defName>
    <label>cooldoown increase</label>
    <description>A magical force seems to be slowing this pawn down.</description>
	<modExtensions>
		<li Class="RimFantasy.HediffExtension">
			<cooldownMultiplier>5</cooldownMultiplier>
		</li>
	</modExtensions>
  </HediffDef>

  <DamageDef ParentName="CutBase">
    <defName>RF_DrainDamage</defName>
    <label>drain</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <deathMessage>{0} has drained.</deathMessage>
    <hediff>RF_DrainDamage</hediff>
    <harmAllLayersUntilOutside>false</harmAllLayersUntilOutside>
    <hasForcefulImpact>false</hasForcefulImpact>
    <canInterruptJobs>false</canInterruptJobs>
    <impactSoundType />
    <armorCategory />
  </DamageDef>

  <HediffDef ParentName="InjuryBase">
    <defName>RF_DrainDamage</defName>
    <label>drain</label>
    <labelNoun>a drain</labelNoun>
    <description>A drain.</description>
    <injuryProps>
      <canMerge>false</canMerge>
    </injuryProps>
  </HediffDef>
</Defs>
